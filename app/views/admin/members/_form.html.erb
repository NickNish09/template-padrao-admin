  </div>

  <div class="form-group">
    <%= form.label :ocupação %>
    <%= form.text_field :ocupation, class: "form-control p-input", placeholder: "Ex: Desenvolvedor" %>
  </div>

  <div class="form-group">
    <%= form.label :twitter %>
    <%= form.text_field :twitter_url, class: "form-control p-input", placeholder: "twitter.com/pessoa" %>
  </div>

  <div class="form-group">
    <%= form.label :facebook %>
    <%= form.text_field :facebook_url, class: "form-control p-input", placeholder: "facebook.com/pessoa" %>
  </div>

  <div class="form-group">
    <%= form.label :instagram %>
    <%= form.text_field :instagram_url, class: "form-control p-input", placeholder: "instagram.com/pessoa" %>
  </div>

