<div class="card-deck">
  <div class="card col-xl-6 col-lg-6 col-md-12 col-sm-12 mb-4" style="min-height:395px;">
    <div class="card-body">
      <h5 class="card-title mb-4">Membros</h5>
      <% @members.each do |member| %>
        <div class="row d-flex align-items-center justify-items-center flex-column">
          <div class="text-center">
            <% if member.photo.attached? %>
              <%= image_tag member.photo,class: "rounded-circle avatar-img" %>
            <% end %>
          </div>
          <div class="text-center mt-3">
            <i class="fa fa-address-book-o icon-grey-big"></i>
          </div>
          <h5 class="text-center bolder"><%= member.name %></h5>
          <h6 class="text-center text-muted"><%= member.ocupation %></h6>
          <p>Facebook: <%= member.facebook_url %></p>
          <p>Twitter: <%= member.twitter_url %></p>
          <p>Instagram: <%= member.instagram_url %></p>
          <%= link_to 'Editar', edit_admin_member_path(member), class: "btn btn-warning btn-block" %>
          <%= link_to 'Deletar', admin_member_path(member), method: :delete, data: { confirm: 'Quer mesmo deletar esse membro?' },class: "btn btn-danger btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<%= link_to 'Novo Membro', new_admin_member_path, class: "btn btn-success" %>
