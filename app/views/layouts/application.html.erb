<!DOCTYPE html>
<html>
  <head>
    <title>BizpageRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,700,700i|Montserrat:300,400,500,700" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <%= stylesheet_link_tag "lib/font-awesome/css/font-awesome.min.css" %>
    <%= stylesheet_link_tag "lib/animate/animate.min.css" %>
    <%= stylesheet_link_tag "lib/ionicons/css/ionicons.min.css" %>
    <%= stylesheet_link_tag "lib/owlcarousel/assets/owl.carousel.min.css" %>
    <%= stylesheet_link_tag "lib/lightbox/css/lightbox.min.css" %>

    <!-- Main Stylesheet File -->
    <%= stylesheet_link_tag "css/style.css" %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
